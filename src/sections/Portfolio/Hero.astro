---
import ProjectCard from "@/src/components/Portfolio/ProjectCard.astro"
import SectionTitle from "@/src/components/UI/SectionTitle.astro"
import { projects } from "@/src/lib/data"
---

<section class="min-h-screen w-full md:max-w-[70%] mx-auto py-20 px-4">
  <div class="w-full flex max-md:flex-col gap-8 items-center">
    <SectionTitle>Portafolio</SectionTitle>
    <div class="flex flex-wrap max-md:justify-center gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            image={project.image}
            imageAlt={`${project.name} screenshot`}
            name={project.name}
            description={project.description}
            ref={project.reference}
          />
        ))
      }
    </div>
  </div>
</section>
